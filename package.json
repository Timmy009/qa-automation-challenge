{
  "name": "qa-automation-challenge",
  "version": "1.0.0",
  "description": "A full-stack application with comprehensive QA automation tests.",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build": "next build app/frontend",
    "start": "next start app/frontend",
    "lint": "next lint app/frontend",
    "start:backend": "npm start --prefix app/backend",
    "start:frontend": "npm start --prefix app/frontend",
    "build:frontend": "npm run build --prefix app/frontend",
    "dev:backend": "npm run dev --prefix app/backend",
    "dev:frontend": "npm run dev --prefix app/frontend",
    "test:ui": "npm run cypress:run --prefix tests/ui",
    "test:api": "npm test --prefix tests/api",
    "test:frontend:unit": "npm test --prefix app/frontend",
    "coverage": "nyc report --reporter=lcov --reporter=text-summary --report-dir=app/backend/coverage",
    "test:all": "npm run test:api && npm run test:ui && npm run test:performance",
    "test:performance": "npm run start:backend & sleep 5 && k6 run tests/performance/smoke-test.js && kill $!",
    "test:security": "docker run --rm -v $(pwd):/zap/wrk/:rw -t owasp/zap2docker-stable zap-full-scan.py -t http://localhost:5000 -g zap-report.html -r zap-report.xml",
    "lint:frontend": "npm run lint --prefix app/frontend",
    "install:all": "npm install && npm install --prefix app/backend && npm install --prefix app/frontend && npm install --prefix tests/ui && npm install --prefix tests/api",
    "postinstall": "npm install --prefix app/backend && npm install --prefix app/frontend && npm install --prefix tests/api && npm install --prefix tests/ui"
  },
  "keywords": ["qa", "automation", "react", "nodejs", "cypress", "jest", "supertest", "k6", "github-actions"],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-aspect-ratio": "1.1.1",
    "@radix-ui/react-avatar": "1.1.2",
    "@radix-ui/react-checkbox": "1.1.3",
    "@radix-ui/react-collapsible": "1.1.2",
    "@radix-ui/react-context-menu": "2.2.4",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-hover-card": "1.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-menubar": "1.1.4",
    "@radix-ui/react-navigation-menu": "1.2.3",
    "@radix-ui/react-popover": "1.1.4",
    "@radix-ui/react-progress": "1.1.1",
    "@radix-ui/react-radio-group": "1.2.2",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "2.1.4",
    "@radix-ui/react-separator": "1.1.1",
    "@radix-ui/react-slider": "1.2.2",
